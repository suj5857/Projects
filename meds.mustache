<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

        <link rel="stylesheet" type="text/css" href="meds_style.css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    
                    <div class="card">
                        <img class="card-img" id="med-image" src="https://images.unsplash.com/photo-1584308666744-24d5c474f2ae?ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8bWVkaWNpbmV8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60">
                        <div class="card-img-overlay">
                                <h1 class="card-title" id="med-heading">
                                    List of Medicines
                                </h1>
                        </div>
                    </div>
                <table class="table table-striped">
                    
                         <tr>
                            <thead class="thead"  >
                                <th>S No.</th>
                                <th>Medicine</th>
                                <th>Count</th>
                                 <th>Brand</th>
                                <th>Delete</th>
                                <th>Count +</th>
                                <th>Count -</th>
                                <th>Edit</th>
                     
                            </thead>
                         </tr>
                   
                
                    {{#rows}}
                        <tr>
                            <td class="we">{{mid}}</td>
                            <td class="we">{{name}}</td>
                            <td  class="we">{{count}}</td>
                            <td class="we">{{brand}}</td>
                            <td>
                                <form action="/meds/delete/{{mid}}" method="post">
                                 <button class="btn-danger" type="submit">delete</button>
                                </form>
                            </td>

                            <td>  
                                        
                                   
 
                                <form action="/meds/counti/{{mid}}" method="post">
                                    <button class="btn-primary" type="submit" >+</button>
                                </form>
                               
                                
                            </td>

                            <td>  
                                        
                                   
 
                                <form action="/meds/countd/{{mid}}" method="post">
                                    <button class="btn-secondary" type="submit" >-</button>
                                </form>
                               
                                
                            </td>
                            <td>
                                <a class="btn btn-success" href="/meds/edit/{{mid}}">edit</a>
                                 
                               
                            </td>
                            
                            
                            
                        </tr>
                    {{/rows}}
               
               

                 </table>
                </div>
            </div>
        </div>
    </body>
</html>